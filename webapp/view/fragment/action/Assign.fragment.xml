<c:FragmentDefinition
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:zcontrolPosFin="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfinlink.controls"
	xmlns:zcontrollinkSar="custlinksar.custlinksar.controls" 
>
	<VBox class="sapUiSmallMargin ">
			<items>
				<l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">
					<Table
						id="tableAssign"
						width="auto"
						class="sapUiResponsiveMargin"
							items="{
							path: 'ProvisionItems>/'
						}"
						selectionChange="onSelectedAssign"
						noDataText="{i18n>tableNoDataText}"
						busyIndicatorDelay="{provisionView>/delay}"
						growing="true"
						growingScrollToLoad="true"
						mode="SingleSelectLeft"
						>
						<headerToolbar>
							<Toolbar >
								<Label  class="textBig" design="Bold" text="{provisionView>/titleTable}" />
								<ToolbarSpacer />
							</Toolbar>
						</headerToolbar>
						<columns>
							<!--COLONNE IMPUTAZIONE-->

							<Column minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsFipex}" /></header>
							</Column>
							
							<Column    minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsFistl}" /></header>
							</Column>
							
							<Column    minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsGeber}" /></header>
							</Column>


						</columns>
						<items>
							<ColumnListItem  >
								<cells>
									<!--DATI IMPUTAZIONE-->
									<!-- <Text  text="{ProvisionItems>FipexEng}" />
									<Text text="{ProvisionItems>FistlEng}" /> -->

									<zcontrolPosFin:LinkPosizioneFinanziaria 
									id="linkPosFinSpesaENGA" anno="{ProvisionItems>FdatkYear}" eos="S" fikrs="S001" 
									fase="GEST" reale="R" versione="D" fipex="{ProvisionItems>FipexEng}" datbis="99991231" 
									text="{ProvisionItems>FipexEng}" semanticObject="ESAMINAMODIFICA"/>

									<zcontrollinkSar:LinkSar id="linkSarBilancioENGA" anno="{ProvisionItems>FdatkYear}" 
										eos="E" fikrs="S001" fase="GEST" SEM_OBJ="" reale="R" versione="D" 
										bilancio="" fictr="{ProvisionItems>FistlEng}" datbis="99991231" text="{ProvisionItems>FistlEng}" />	


									<Text  text="{ProvisionItems>ZgeberEng}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:Grid>
			</items> 
		</VBox>
		
</c:FragmentDefinition>