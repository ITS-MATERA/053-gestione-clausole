<c:FragmentDefinition
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
>
	<VBox class="sapUiSmallMargin ">
			<items>
				<l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">
					<Table
						id="tableChangeActive"
						width="auto"
						class="sapUiResponsiveMargin"
							items="{
							path: 'ProvisionItems>/'
						}"
						noDataText="{i18n>tableNoDataText}"
						busyIndicatorDelay="{provisionView>/delay}"
						growing="true"
						growingScrollToLoad="true"
						mode="SingleSelectMaster"
						>
						<headerToolbar>
							<Toolbar >
								<Label  class="textBig" design="Bold" text="{provisionView>/titleTable}" />
								<ToolbarSpacer />
							</Toolbar>
						</headerToolbar>
						<columns>
							<!--COLONNE RETTIFICA-->
							<Column  minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsFdatk}" /></header>
							</Column>
							
							<Column   minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsZcomp}" /></header>
							</Column>

							<Column  minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsZcassa}" /></header>
							</Column>

							<Column   minScreenWidth="Tablet" demandPopin="true">
									<header><Text  text="{i18n>tableNameColumnDetailsZImpIpeCl}" /></header>
							</Column>

						</columns>
						<items>
							<ColumnListItem  >
								<cells>
									<Text  text="{ProvisionItems>FdatkYear}" />
									<Text text="{path:'ProvisionItems>Zcomp', formatter:'.formatter.convertFormattedNumber'}" />
									<Text text="{path:'ProvisionItems>Zcassa', formatter:'.formatter.convertFormattedNumber'}" />
									<Text text="{path:'ProvisionItems>ZImpIpeCl', formatter:'.formatter.convertFormattedNumber'}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:Grid>
			</items> 
		</VBox>
</c:FragmentDefinition>